{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:react/recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "ecmaFeatures": {
            "jsx": true
        },
        "sourceType": "module",
        "project": ["./tsconfig.json"]
    },
    "plugins": ["react", "@typescript-eslint"],
    "rules": {},
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
